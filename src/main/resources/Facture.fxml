<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #F0F0F0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FactureController">
    <children>
        <Label layoutX="20" layoutY="20" prefHeight="27.0" prefWidth="85.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Your Bill" />

        <Label layoutX="20" layoutY="70" text="Total" />
        <Label fx:id="montantLabel" layoutX="150" layoutY="70" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="0.00 TND" />

        <Label layoutX="20.0" layoutY="123.0" text="Payement Method" />
        <CheckBox fx:id="cashCheckBox" layoutX="150.0" layoutY="122.0" prefHeight="18.0" prefWidth="65.0" text="CASH" />
        <CheckBox fx:id="onlineCheckBox" layoutX="250.0" layoutY="124.0" text="ONLINE" />

        <Button layoutX="200" layoutY="200" onAction="#confirmerPaiement" style="-fx-background-color: green; -fx-text-fill: white;" text="Confirm Payement" />
    </children>
</AnchorPane>
